{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "sourceMaps": true,
      "preLaunchTask": "watch"
    },
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--import", "tsx", "--test"],
      "args": ["${workspaceFolder}/test/*.test.ts"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "sourceMaps": true,
      "preLaunchTask": "build"
    }
  ]
}
